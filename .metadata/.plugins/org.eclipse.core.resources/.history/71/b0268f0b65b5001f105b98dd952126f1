package controller;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import javax.servlet.*;
import javax.servlet.http.*;
import java.io.*;
import java.nio.file.*;
import com.oreilly.servlet.MultipartRequest;
/**
 * Servlet implementation class Suasanphamproductquantri
 */
@WebServlet("/Suasanphamproductquantri")
public class Suasanphamproductquantri extends HttpServlet {
	private static final long serialVersionUID = 1L;
	 private static final String UPLOAD_DIRECTORY = "C:/uploads"; // Đảm bảo thư mục này tồn tại hoặc có thể thay đổi đường dẫn tùy ý
    /**
     * @see HttpServlet#HttpServlet()
     */
    public Suasanphamproductquantri() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		 // Đảm bảo thư mục upload đã tồn tại
        File uploadDir = new File(IMAGE_DIRECTORY);
        if (!uploadDir.exists()) {
            uploadDir.mkdirs();
        }

        // Chế độ đọc form multipart để xử lý upload file
        int maxFileSize = 50 * 1024 * 1024; // 50 MB max file size
        MultipartRequest multiPartRequest = new MultipartRequest(request, IMAGE_DIRECTORY, maxFileSize);

        // Lấy dữ liệu từ form
        String productId = multiPartRequest.getParameter("product-id");
        String name = multiPartRequest.getParameter("name");
        String category = multiPartRequest.getParameter("category");
        String price = multiPartRequest.getParameter("price");
        String description = multiPartRequest.getParameter("description");

        // Lấy tên file hình ảnh và lưu vào thư mục
        String imageFileName = multiPartRequest.getFilesystemName("image");
        String imagePath = IMAGE_DIRECTORY + File.separator + imageFileName;
		
		
		
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
